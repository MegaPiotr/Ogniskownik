<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MyDrawerTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/Toolbar</item>
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
  </style>
  
  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@color/ToolbarText</item>
  </style>

  <style name="ToolBarStyle" parent="Theme.AppCompat">
    <item name="android:textColorPrimary">@color/ToolbarText</item>
    <item name="android:textColorSecondary">@color/ToolbarText</item>
    <item name="actionMenuTextColor">@android:color/white</item>
  </style>
</resources>
